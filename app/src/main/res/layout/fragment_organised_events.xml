<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.HomeActivity.fragments.OrganisedEvents">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Organised Events"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="@color/cyan_1"
                android:layout_weight="1"
                />
            <ImageButton
                android:id="@+id/createevent"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="#00000000"
                android:src="@drawable/icon_add"
                android:tint="@color/cyan_1"
                android:layout_marginRight="10dp"
                />

            <ImageButton
                android:id="@+id/imageButton"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="#00000000"
                android:src="@drawable/icon_more_options"
                android:tint="@color/cyan_1"
                />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Events you are organiser of"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            />

        <LinearLayout
            android:id="@+id/listview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:orientation="vertical"
            >
        </LinearLayout>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>